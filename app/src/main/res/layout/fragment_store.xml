<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_store">

    <TextView
        android:id="@+id/store_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Store!"
        app:layout_constraintBottom_toTopOf="@id/action_to_aile_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/action_to_aile_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Aile 1!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/action_to_aile_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Aile 2!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/action_to_aile_1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/action_to_aile_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Aile 3!!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/action_to_aile_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_to_aile_1" />
</androidx.constraintlayout.widget.ConstraintLayout>