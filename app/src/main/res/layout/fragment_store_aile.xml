<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/aile_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Aile!"
        app:layout_constraintBottom_toTopOf="@id/action_to_next_aile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/action_to_next_aile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Aile!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/action_to_backroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Backroom!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_to_next_aile" />

    <Button
        android:id="@+id/action_to_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_to_backroom" />

    <Button
        android:id="@+id/action_to_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop Up To Store!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_to_last" />

    <Button
        android:id="@+id/action_pop_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop Up To Home!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_to_store" />

</androidx.constraintlayout.widget.ConstraintLayout>